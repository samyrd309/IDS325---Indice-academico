@model IDS325___Indice_academico.Models.Asignatura

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Asignatura</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodigoAsignatura" class="control-label">Clave</label>
                <input asp-for="CodigoAsignatura" class="form-control" />
                <span asp-validation-for="CodigoAsignatura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreAsignatura" class="control-label">Nombre</label>
                <input asp-for="NombreAsignatura" class="form-control" />
                <span asp-validation-for="NombreAsignatura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoArea" class="control-label">Área Académica</label>
                <select asp-for="CodigoArea" class="form-select" asp-items="ViewBag.SituationList">
                    <option value="">Seleccione el Área Académica</option>
                </select>
                <span asp-validation-for="CodigoArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credito" class="control-label"></label>
                <input asp-for="Credito" class="form-control" />
                <span asp-validation-for="Credito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
